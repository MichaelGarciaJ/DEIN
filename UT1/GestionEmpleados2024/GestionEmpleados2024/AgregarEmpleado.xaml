<Window x:Class="GestionEmpleados2024.AgregarEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2024"
        mc:Ignorable="d"
        Title="AgregarEmpleado" Height="350" Width="500" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        
        <TextBlock Text="Nombre:" Margin="20,25,390,0" VerticalAlignment="Top" Height="18"/>
        <TextBox x:Name="txtNombre" Tag="Nombre" Margin="20,48,20,0" VerticalAlignment="Top"/>

        <TextBlock Text="Apellidos:" Margin="20,81,390,0" VerticalAlignment="Top" Height="18"/>
        <TextBox x:Name="txtApellidos" Tag="Nombre" Margin="20,104,20,0" VerticalAlignment="Top"/>

        <TextBlock Text="Es Usuario:" Margin="20,137,390,0" VerticalAlignment="Top" Height="18"/>
        <CheckBox x:Name="chkEsUsuario" Margin="20,160,20,0" VerticalAlignment="Top"/>
        
        <TextBlock Text="Edad:" Margin="20,193,390,0" VerticalAlignment="Top" Height="18"/>
        <TextBox x:Name="txtEdad" Tag="Edad" Margin="20,216,20,0" VerticalAlignment="Top"/>

        <Button Margin="20,234,20,0" VerticalAlignment="Top" Height="30" Click="agregarEmpleado">Agregar Empleado</Button>


    </Grid>
</Window>
