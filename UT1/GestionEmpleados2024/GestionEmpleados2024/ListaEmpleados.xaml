<Window x:Class="GestionEmpleados2024.ListaEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2024"
        mc:Ignorable="d"
        Title="ListaEmpleados" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid>

        <Label Content="Lista de Empleados" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,36,0,0"></Label>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="10,84,10,104"/>

        <Button Name="EliminarEmpleado" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="60" Margin="0,348,0,0" Click="EliminarEmpleado_Click">Eliminar Empleado</Button>

    </Grid>
</Window>
